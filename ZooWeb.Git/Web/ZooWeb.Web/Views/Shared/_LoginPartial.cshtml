@using Microsoft.AspNetCore.Identity
@inject SignInManager<ZooWebUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="sidebar-bottom">
        <div class="sidebar-bottom-button h3">
            <a id="sidebar-signin" href="/Identity/Account/Logout">Sing out</a>
        </div>
    </div>
}
else{
    <div style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
        <a id="sidebar-signin" href="/Identity/Account/Login" style="font-size: 1.5em; padding: 15px 30px;">Sing in</a>
        </div>
}
