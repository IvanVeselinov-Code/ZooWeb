@using Microsoft.AspNetCore.Identity
@inject SignInManager<ZooWebUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="sidebar-bottom">
        <div class="sidebar-bottom-button h3">
            <a id="sidebar-signin" href="/Identity/Account/Logout">Sing out</a>
        </div>
    </div>
}
else{
    <div style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
        <a href="/Identity/Account/Login" class="sidebar-navigation-category-title" style="color: #FF4500; font-weight: bold; font-size: 2em; text-shadow: 2px 2px 4px black; text-decoration: none; cursor: pointer;">Sign in</a>
    </div>
}
